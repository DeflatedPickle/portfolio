@require "colours"

@import url('https://fonts.googleapis.com/css?family=Poppins:200i')
@import url('https://fonts.googleapis.com/css?family=Arvo')

.mainProject
  .expanderParent
    bottom initial
    height 98%

    grid-row-start 1
    grid-row-end 4

    .expander
      width 32px
      height 100%

  .hiddenContent
    border-top none

    grid-row-start 1
    grid-row-end 4

.mainProjectLeft
  @extend .mainProject

  // grid-template-columns 145px auto 32px 20px
  grid-template-columns 145px auto 32px 0
  grid-template-rows 30px auto 32px

  .expanderParent
    grid-column 3

  .hiddenContent
    border-left 3px solid text

    grid-column 4

.mainProjectRight
  @extend .mainProject

  // grid-template-columns 20px 32px 145px auto
  grid-template-columns 0 32px 145px auto
  grid-template-rows 30px auto 32px

  h3
    grid-row 1
    grid-column 4

  p
    grid-row 2
    grid-column 4

  img
    grid-row 1
    grid-column 3

    grid-row-start 1
    grid-row-end 3

  .expanderParent
    grid-column 2

  .hiddenContent
    border-right 3px solid text

    grid-column 1

.main_projects
  background-color toolbar

  padding 10px

  .left
    .project
      @extend .mainProjectLeft

      margin 30px 5% 30px 30%

      filter drop-shadow(3px 3px 5px black)

  .right
    .project
      @extend .mainProjectRight

      margin 30px 30% 30px 5%

      filter drop-shadow(-3px 3px 5px black)

.project
  background-color panel

  border-style solid
  border-color panel

  overflow auto

  // position relative
  // padding-bottom 24px

  margin 9px 3px 9px 3px

  display grid
  grid-template-columns 145px auto
  grid-template-rows 30px auto 32px auto

  h3
    display inline-block

    width 100px

    font-family 'Arvo', serif

    // border-bottom: 2px solid text
    box-shadow inset 0 -2px 0 text

    padding-left 3px
    margin 3px

    grid-row 1
    grid-column 2

  p
    font-family 'Poppins', sans-serif

    margin 1px

    grid-row 2
    grid-column 2

  img
    // float left
    overflow auto

    width 128px
    height 128px

    margin 5px

    filter opacity(0.9) drop-shadow(3px 3px 5px black)

    grid-row 1
    grid-column 1

    grid-row-start 1
    grid-row-end 3

  .expanderParent
    // bottom 0
    // position absolute

    width 100%

    grid-column-start 1
    grid-column-end 3

    grid-row 3

    .expander
      background-color text

      height 32px

      // text-align center

      font-family 'Arvo', serif

      color white

      display flex
      justify-content center
      align-items center

      // h3
      //   z-index 1
      //   transform translateY(2px)

      //   color white

      //   box-shadow none

      &:hover
        background-color textHover

        cursor pointer

  .hiddenContent
    background-color toolbar

    // display none
    // overflow hidden

    // max-height 0
    // overflow hidden

    border-top 3px solid text

    grid-row 4
    grid-column-start 1
    grid-column-end 3

.hidden
  visibility hidden

  // display none